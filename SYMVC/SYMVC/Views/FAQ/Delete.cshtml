@model SYMVC.Models.FAQ

@{
    ViewBag.Title = "Delete";
}

<div style="margin-left:3vw;margin-right:3vw">
    <h2>Delete</h2>

    <h3>Are you sure you want to delete this FAQ?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Question)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Question)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Answer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Answer)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class= "btn-redgrd" style="margin-left:calc(30px + 5vw)" /><br/><br/><br />
            @Html.ActionLink("◄ Cancel", "Index", "FAQ", null, new { @class = "btn-bluegrd", style = "height:22px;padding-top:0px" })
        </div>
    }
</div>
